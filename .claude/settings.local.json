{
  "permissions": {
    "allow": [
      "Bash(npm run lint)",
      "Bash(npx tsc:*)"
    ],
    "deny": [],
    "ask": []
  },
  "mcpServers": {
    "vercel": {
      "command": "npx",
      "args": [
        "@vercel/mcp-server"
      ],
      "env": {
        "VERCEL_API_TOKEN": "${VERCEL_API_TOKEN}"
      }
    },
    "github": {
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PERSONAL_ACCESS_TOKEN}"
      }
    }
  }
}